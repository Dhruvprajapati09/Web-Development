<!DOCTYPE html>
<html>
<head>
  <title>All Posts</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<h1>Quora Page</h1>

<% for (let p of posts) { %>
  <div class="post">
    <h3>@<%= p.username %></h3>
    <p><%= p.content %></p>

    <a href="/posts/<%= p.id %>">Details</a>
    <a href="/posts/<%= p.id %>/edit">Edit</a>

    <form method="POST" action="/posts/<%= p.id %>?_method=DELETE">
      <button type="submit">Delete</button>
    </form>
    <hr>
  </div>
<% } %>

<a href="/posts/new">Create New Post</a>

</body>
</html>
